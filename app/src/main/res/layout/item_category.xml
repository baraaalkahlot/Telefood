<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/size_large"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_category_image"
        android:layout_width="@dimen/size_item_category"
        android:layout_height="@dimen/size_item_category"
        android:background="@drawable/ic_ellipse_lochinvar"
        android:scaleType="centerInside"
        app:contentPadding="@dimen/size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_category_all" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tundora"
        android:textSize="@dimen/text_size_mid"
        app:layout_constraintEnd_toEndOf="@+id/iv_category_image"
        app:layout_constraintStart_toStartOf="@id/iv_category_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_category_image" />
</androidx.appcompat.widget.LinearLayoutCompat>