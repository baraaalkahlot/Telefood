<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_margin="@dimen/size_small"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_sent_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/size_small"
        android:background="@drawable/shape_recived_message"
        android:paddingStart="@dimen/size_mid"
        android:paddingTop="@dimen/size_small"
        android:paddingEnd="@dimen/size_mid"
        android:paddingBottom="@dimen/size_small"
        android:text="هذا النص هو مثال لنص يمكن أن يستبدل في "
        android:textColor="@color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/size_small"
        android:text="ص 10:24" />
</LinearLayout>