<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="@dimen/size_small"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_sent_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sent_message"
        android:minWidth="100dp"
        android:paddingStart="@dimen/size_mid"
        android:paddingTop="@dimen/size_small"
        android:paddingEnd="@dimen/size_mid"
        android:layout_gravity="right"
        android:paddingBottom="@dimen/size_small"
        android:textColor="@color/mine_shaft" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_small" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_add_ads_image_list" />
</LinearLayout>