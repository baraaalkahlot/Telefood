<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Telefood" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lochinvar</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maroon_flush</item>
        <item name="colorSecondaryVariant">@color/lochinvar</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">@font/cairo</item>
    </style>

    <style name="Theme.Telefood.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lochinvar</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maroon_flush</item>
        <item name="colorSecondaryVariant">@color/lochinvar</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="android:background">@color/white</item>
        <!-- Support library compatibility -->
        <item name="background">@color/white</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="Theme.Telefood.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/cairo</item>
    </style>


    <style name="Theme.Telefood.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Telefood.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_corners_shape</item>
    </style>

    <style name="ColoredMainTitleTheme">
        <item name="android:textColor">@color/lochinvar</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="DescTextTheme">
        <item name="android:textColor">@color/tundora</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="ColoredTitleTheme">
        <item name="android:textColor">@color/lochinvar</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="SubTitleTheme">
        <item name="android:textColor">@color/tundora</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
    </style>

    <style name="PriceTitleTheme">
        <item name="android:textColor">@color/lochinvar</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GradientButtonTheme">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/shape_colored_button</item>
    </style>

    <style name="GrayButtonTheme">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@color/Mercury</item>
        <item name="android:textColor">@color/tundora</item>
    </style>

    <style name="CardViewTheme">
        <item name="contentPadding">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="InputLayoutTextTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_input_layout_stroke</item>
    </style>

    <style name="SpinnerTextTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/selector_input_layout_stroke</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="FabTheme" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="FavoriteFabTheme" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorOnSecondary">@color/maroon_flush</item>
    </style>

    <style name="DialogSolidButtonTheme">
        <item name="backgroundTint">@color/mandy</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/radius_dialog_button</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>