<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notification_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/label_enable_app_notification" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/language_header">


        <ListPreference
            android:defaultValue="1"
            android:entries="@array/language_entries"
            android:entryValues="@array/language_entry"
            android:key="list_preference_language"
            android:title="@string/label_language" />
    </PreferenceCategory>

</PreferenceScreen>